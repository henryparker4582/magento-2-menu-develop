<?php /** @var \Snowdog\Menu\Block\NodeType\Category $block */ ?>
<?php
$nodeId = $block->getId();
$class = $block->getMenuClass();
$class .= $block->getIsRoot() ? '__link' : '__inner-link';
$dataAttribute = $nodeId ? ' data-menu="menu-' . $nodeId . '"' : '';
$categoryUrl = $block->getCategoryUrl($nodeId);
$categoryUrl = $categoryUrl ?: '#';
?>
<a href="<?= $categoryUrl ?>"
   class="<?= $class ?>"<?= $dataAttribute ?>
>
    <?= $block->getTitle() ?>
</a>
