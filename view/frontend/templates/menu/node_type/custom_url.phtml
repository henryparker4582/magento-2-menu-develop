<?php
    $menuClass = $block->getMenu()->getCssClass();
    $node = $block->getMenuNode();
    $classes = $menuClass;
    $classes .= $node->getLevel() == 0 ? '__link' : '__inner-link';
    $classes .= $node->getClasses() ? ' ' . $node->getClasses() : '';
    $dataAttribute = $node->getNodeId() ? ' data-menu="menu-' . $node->getNodeId() . '"' : '';
?>
<a href="<?= $node->getContent() ?>" class="<?= $classes ?>"<?= $dataAttribute ?>><?= $node->getTitle() ?></a>
